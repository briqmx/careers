---
export interface Props {
	category: 'Presencial' | 'Virtual';
  title: string;
  description: string;
	image: string;
}

const { image, category, title, description } = Astro.props;
---

<article class="grid grid-cols-1 md:grid-cols-2 gap-4">
  <div class="w-full h-full">
    <figure class="h-[300px] w-full bg-black rounded-lg overflow-hidden relative">
      <img src={image} alt={title} class="w-full h-full object-cover object-center absolute inset-0" />
    </figure>
  </div>
  <div class="w-full h-full bg-navy/5 rounded-lg p-4 flex flex-col justify-between">
    <div class="mb-8">
      <h3 class="text-blue font-display font-medium">{category}</h3>
      <h4 class="text-xl font-display font-medium">{title}</h4>
    </div>
    <p>{description}</p>
  </div>
</article>